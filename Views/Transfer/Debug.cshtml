<!DOCTYPE html>
<html>
<head>
    <title>Database Debug</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .test-result { margin: 10px 0; padding: 10px; border-radius: 5px; }
        .success { background-color: #d4edda; border: 1px solid #c3e6cb; }
        .error { background-color: #f8d7da; border: 1px solid #f5c6cb; }
        button { padding: 10px 15px; margin: 5px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>Database Debug Panel</h1>
    
    <div>
        <button onclick="testConnection()">Test Database Connection</button>
        <button onclick="getBalances()">Get Account Balances</button>
        <button onclick="checkTables()">List All Tables</button>
        <button onclick="testTransfer()">Test Transfer (POST)</button>
    </div>
    
    <div id="results"></div>

    <script>
        function displayResult(data, success = true) {
            const div = document.createElement('div');
            div.className = `test-result ${success ? 'success' : 'error'}`;
            div.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
            document.getElementById('results').appendChild(div);
        }

        async function testConnection() {
            try {
                const response = await fetch('/Transfer/TestConnection');
                const data = await response.json();
                displayResult(data, data.success);
            } catch (error) {
                displayResult({error: error.message}, false);
            }
        }

        async function getBalances() {
            try {
                const response = await fetch('/Transfer/GetBalances');
                const data = await response.json();
                displayResult(data, !data.error);
            } catch (error) {
                displayResult({error: error.message}, false);
            }
        }

        async function testTransfer() {
            try {
                const response = await fetch('/Transfer/ExecuteTransfer', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: ''
                });
                const text = await response.text();
                displayResult({status: response.status, response: text.substring(0, 500) + '...'});
            } catch (error) {
                displayResult({error: error.message}, false);
            }
        }

        async function checkTables() {
            // This would need a new controller action to list tables
            displayResult({message: "Need to add ListTables action to controller"}, false);
        }
    </script>
</body>
</html>